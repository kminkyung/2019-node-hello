doctype html
html(lang="ko")
	head
		include ./inc/header.pug
	body
		include ./inc/navi.pug
		.container.my-3.mem
			.jumbotron
				h2= `${title}`
			form(name="memberForm", method="post", action="/mem/join", onsubmit="return memberJoin(this);")
				table.table.mem-table
					colgroup
						col(width="20%")
						col
					tbody
						tr
							td 아이디
							td.form-inline
								input.form-control.mr-3(type="text", name="userid", id="userid", placeholder="아이디", style="max-width: 200px;", data-use="F")
								span.userid-cmt
						tr
							td 패스워드
							td.form-inline
								input.form-control(type="password", name="userpw", id="userpw", style="max-width: 200px;")
								span.userpw-cmt
						tr
							td 패스워드 확인
							td.form-inline
								input.form-control(type="password", name="userpw2", id="userpw2", style="max-width: 200px;")
								span.userpw-cmt2
						tr
							td 이름
							td
								input.form-control(type="text", name="username", id="username", placeholder="이름", style="max-width: 200px;")
						tr
							td 전화번호
							td.form-inline
								select.form-control(name="tel1", id="tel1", style="max-width: 150px;")
									option(value="" selected) 선택
									each item in tel
										option(value=item)= item
								span &nbsp;-&nbsp;
								input.form-control(type="number", name="tel2", id="tel2", min="0", max="9999", maxlength="4", style="max-width: 200px;", oninput="telChk(this);")
								span &nbsp;-&nbsp;
								input.form-control(type="number", name="tel3", id="tel3", min="0", max="9999", maxlength="4", style="max-width: 200px;", oninput="telChk(this);")
						tr
							td 우편번호
							td.form-inline
								input.form-control(type="text", name="post", id="post", style="max-width: 200px;" readonly)
								span &nbsp;
								button.btn.bt(type="button", onclick="daumPostcode();") 우편번호찾기
						tr
							td 도로명 주소
							td
								input.form-control(type="text", name="addr1", id="addr1" readonly)
								span(id="guide" style="color:#999; display:none;")
						tr.border-bottom
							td 상세주소
							td.form-inline
								input.form-control.w-50.mr-3(type="text", name="addr3", id="addr3", placeholder="상세주소")
								input.form-control.w-50(type="text", name="addr2", id="addr2", placeholder="참고항목", style="max-width: 200px;")
				.my-3.text-center
					button.btn.bt 회원가입
					button.btn.bt(type="reset") 다시작성
		script(src="https://t1.daumcdn.net/mapjsapi/bundle/postcode/prod/postcode.v2.js")
		script(src="/js/post_search.js") 
		//- 구동되는 함수가 있는 js
		include inc/footer.pug
		include inc/script.pug
